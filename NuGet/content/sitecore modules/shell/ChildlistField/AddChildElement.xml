<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <AddChildElement>
    <FormDialog Icon="Control/16x16/treeview.png" Header="Create new item"
      Text="Use this form to create a new child element" >

      <CodeBeside Type="SitecoreExtension.ChildlistField.UI.AddChildElement,SitecoreExtension.ChildlistField"/>

      <GridPanel Width="100%" Height="100%" Style="table-layout:fixed">
        <Scrollbox Width="100%" Height="100%" Class="scScrollbox scFixSize scInsetBorder" Background="white" Padding="0" GridPanel.Height="100%" Style="filter:progid:DXImageTransform.Microsoft.Gradient(GradientType=1,StartColorStr='#DFE6EC', EndColorStr='#ffffff')">
          <Listview ID="TemplateList" View="Details" Width="100%">
            <ListviewHeader>
              <ListviewHeaderItem Name="name" Header="Name" />
              <ListviewHeaderItem Name="description" Header="Description" />
            </ListviewHeader>
          </Listview>
        </Scrollbox>
        <Border Padding="4px 0px 4px 0px">
          <GridPanel Width="100%" Columns="2">
            <Border Padding="0px 4px 0px 0px">
              <Literal Text="Name: "/>
            </Border>

            <Edit ID="ElementName" Width="100%" GridPanel.Width="100%"/>
          </GridPanel>
        </Border>

      </GridPanel>
    </FormDialog>
  </AddChildElement>
</control>


